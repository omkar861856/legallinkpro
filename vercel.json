{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/dist/index.js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "dist/index.js": {
      "includeFiles": "dist/public/**"
    }
  }
}
